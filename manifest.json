{
    "name": "GPT-Prompter",
    "browser_specific_settings": {
        "gecko": {
          "id": "giorgiosilvidev@gmail.com",
          "strict_min_version": "101.0"
        }
      },
    "version": "0.0.1.7",
    "description": "Fast custom prompts to GPT-3 API",
    "manifest_version": 2,
    "icons": {
        "16": "icons/iconA16.png",
        "48": "icons/iconA48.png",
        "128": "icons/iconA128.png"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab" 
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
                "popup_world.js",
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "GPT-Prompter"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "prompt-on-the-fly": {
            "suggested_key": {
                "default": "Alt+P"
            },
            "description": "Launches the Prompt-on-the-Fly functionality"
        }
    }
}